@page "/categories/admin"
@attribute [Authorize(Roles = "Admin")]
@inject ICategoryService CategoryService
@inject NavigationManager NavigationManager


<MudTable Items="CategoryService.AdminCategories" Hover="true" Bordered="true">
    <ToolBarContent>
        @*<MudText Typo="Typo.h6">Categories</MudText>*@
        <MudButton OnClick="CreateNewCategory">
            Create New Category
        </MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>URL</MudTh>
        <MudTh>Image URL</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Url">@context.Url</MudTd>
        <MudTd DataLabel="ImageUrl">@context.ImageUrl</MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="(() => ShowCategory(context.Id))">
            </MudIconButton>
        </MudTd>
        @*        <MudTd>
        <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="(() => DeleteCategory())">
        </MudIconButton>
        </MudTd>*@
    </RowTemplate>

    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
