@page "/item/{id:int}"
@inject ICartService cartService
@inject IItemService itemService
@using Diploma.Client.Services.ItemService;
@using Diploma.Client.Services.CartService;
@using Diploma.DTO;

@if (itemDto == null)
{
    <Loading />
}
else
{
    <MudContainer>
        <MudImage Src="@itemDto.ImageUrl" Alt="@itemDto.Name"></MudImage>
        <MudContainer>
            <MudText Typo="Typo.h2">@itemDto.Name</MudText>
            <MudText Typo="Typo.body1">@itemDto.Description</MudText>
            <MudText Typo="Typo.h4">@itemDto.Price</MudText>
            <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" OnClick="AddItemToCart">
                &nbsp;&nbsp;&nbsp;Add to Cart
            </MudIconButton>
        </MudContainer>
    </MudContainer>
}