@page "/orders"
@inject IOrderService _orderService

<h3>My Orders</h3>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Items</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (orders != null)
        {
            @foreach (var order in orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.Item</td>
                    <td>@order.Status</td>
                    @*                    <td>
            @if (order.Status == OrderStatus.Pending)
            {
            <button @onclick="() => ApproveOrder(order.Id)">Approve</button>
            }
            </td>*@
                    <td>
                        <a href="order/@order.Id">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>