                </NotAuthorized>
                <Authorized>
                    <div class="place-order-button">
                        <MudButton Variant="Variant.Outlined" Color="Color.Dark" OnClick="ProceedToCheckout">Go to Checkout</MudButton>
                    </div>
                </Authorized>
            </AuthorizeView> *@

            <div class="place-order-button">
                <MudButton Variant="Variant.Outlined" Color="Color.Dark" OnClick="ProceedToCheckout">Go to Checkout</MudButton>
            </div>
        </div>
    }
</div>